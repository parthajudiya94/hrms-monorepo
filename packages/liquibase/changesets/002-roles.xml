<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- Create roles table -->
  <changeSet id="002-create-roles" author="system">
    <createTable tableName="roles">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="tenant_id" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="TEXT"/>
      <column name="is_system_role" type="BOOLEAN" defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addForeignKeyConstraint
      baseTableName="roles"
      baseColumnNames="tenant_id"
      constraintName="fk_roles_tenant"
      referencedTableName="tenants"
      referencedColumnNames="id"
      onDelete="CASCADE"/>
    <createIndex indexName="idx_roles_tenant" tableName="roles">
      <column name="tenant_id"/>
    </createIndex>
    <createIndex indexName="idx_roles_tenant_name" tableName="roles">
      <column name="tenant_id"/>
      <column name="name"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>

