<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- Create time_tracking table -->
  <changeSet id="004-create-time-tracking" author="system">
    <createTable tableName="time_tracking">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="tenant_id" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="date" type="DATE">
        <constraints nullable="false"/>
      </column>
      <column name="clock_in_time" type="TIMESTAMP"/>
      <column name="clock_out_time" type="TIMESTAMP"/>
      <column name="break_in_time" type="TIMESTAMP"/>
      <column name="break_out_time" type="TIMESTAMP"/>
      <column name="total_work_hours" type="DECIMAL(10,2)" defaultValueNumeric="0"/>
      <column name="total_break_hours" type="DECIMAL(10,2)" defaultValueNumeric="0"/>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addForeignKeyConstraint
      baseTableName="time_tracking"
      baseColumnNames="user_id"
      constraintName="fk_time_tracking_user"
      referencedTableName="users"
      referencedColumnNames="id"
      onDelete="CASCADE"/>
    <addForeignKeyConstraint
      baseTableName="time_tracking"
      baseColumnNames="tenant_id"
      constraintName="fk_time_tracking_tenant"
      referencedTableName="tenants"
      referencedColumnNames="id"
      onDelete="CASCADE"/>
    <createIndex indexName="idx_time_tracking_user" tableName="time_tracking">
      <column name="user_id"/>
    </createIndex>
    <createIndex indexName="idx_time_tracking_tenant" tableName="time_tracking">
      <column name="tenant_id"/>
    </createIndex>
    <createIndex indexName="idx_time_tracking_user_date" tableName="time_tracking">
      <column name="user_id"/>
      <column name="date"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>

